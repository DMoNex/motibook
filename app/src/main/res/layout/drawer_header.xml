<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/namecard_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/namecard_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:text="김김김"
        android:textColor="#FF000000"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/namecard_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namecard_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Sample@gmail.com"
        android:textColor="#FF000000"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/namecard_image"
        app:layout_constraintTop_toBottomOf="@+id/namecard_name" />

</androidx.constraintlayout.widget.ConstraintLayout>



